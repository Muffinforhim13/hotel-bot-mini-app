{
  "version": 2,
  "builds": [
    {
      "src": "api/bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/bot.py"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot_token",
    "MINI_APP_URL": "@mini_app_url",
    "SECRET_KEY": "@secret_key",
    "MINI_APP_DEBUG": "@mini_app_debug"
  }
}
